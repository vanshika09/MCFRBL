<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="beans.MachineScheduleActivity" table="machine_schedule_activity" >
		<id name="activityNo" type="java.lang.String">
			<column name="activity_no"  length="15"></column>
			
		</id>
		<property name="activityDescription"  type="java.lang.String">
		<column name="activity_description" length="250"></column>
		</property>
 
 		<property name="entryBy" type="java.lang.String">
			<column name="entry_by" length="15"></column>
		</property> 
				
	    <property name="entryDate" type="timestamp">
			<column name="entry_date" ></column>
		</property>  
	
		
		
		
	</class>
</hibernate-mapping>